<div class="app-container">
  <!--navbar-->
  <%= render "home/navbar"%>
  <!--content-->
  <%= render "posts/sidebar"%>
  <div class="friend-list">
    <h4>
      Friend requests
    </h4>
    <div class="detail-list">
      <% current_user.friend_request_list.each do |user| %>
        <div class="profile">
          <div class="avatar">
            <%= image_tag 'avatar/unknown.jpeg', alt: ""%>
          </div>
          <h4><%= user.nickname %></h4>
          <div>Confirm</div>
          <div>Delete</div>
        </div>
      <% end %>
    </div>
  </div>
</div>
